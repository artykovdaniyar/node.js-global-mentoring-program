{
	"name": "node.js-mentoring-program",
	"version": "1.0.0",
	"description": "The repository was created for educational purposes, especially for the Node.js Global Mentoring Program [2024 Q1-Q2 GUKKA, BY] in the Learn Digital Platform of EPAM Systems. The main goal of the project is to complete the practical tasks of the program.",
	"main": "./src/index.js",
	"scripts": {
		"dev": "nodemon",
		"start": "node ./dist/index.js",
		"lint": "eslint ./src/**",
		"lint:fix": "eslint ./src/** --fix",
		"build": "tsc",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:unit": "jest  --testMatch='**/*.unit.test.ts'",
		"test:integration": "jest  --testMatch='**/*.integration.test.ts'",
		"test:coverage": "jest src --coverage",
		"test:e2e": "jest e2e"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@typescript-eslint/parser": "^6.16.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.2",
		"prettier": "^3.1.1",
		"ts-node": "^10.9.2",
		"tslog": "^4.9.2",
		"typescript": "^5.3.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/artykovdaniyar/node.js-mentoring-program.git"
	},
	"keywords": [
		"node.js"
	],
	"author": "Daniiar Artykov",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/artykovdaniyar/node.js-mentoring-program/issues"
	},
	"homepage": "https://github.com/artykovdaniyar/node.js-mentoring-program#readme",
	"dependencies": {
		"@types/jest": "^29.5.12",
		"axios": "^1.6.8",
		"jest": "^29.7.0",
		"node-notifier": "^10.0.1",
		"nodemon": "^3.1.0",
		"supertest": "^6.3.4",
		"ts-jest": "^29.1.2"
	}
}
